{
  "version": 2,
  "builds": [
    { "src": "web/main/next.config.js", "use": "@now/next" },
    { "src": "web/corp/next.config.js", "use": "@now/next" },
    { "src": "packages/api/**/*", "use": "@now/static" },
    { "src": "packages/design/**/*", "use": "@now/static" }
  ],
  "build": {
    "env": {
      "NPM_TOKEN": "@npm-token"
    }
  },
  "name": "fusion",
  "routes": [
    { "src": "/admin/(.*)", "dest": "/web/corp/$1" },
    { "src": "/(.*)", "dest": "/web/main/$1" }
  ]
}
